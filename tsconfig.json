{
  "compilerOptions": {
    "target": "ES2018", // ~node10
    "module": "commonjs",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018"
    ],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "removeComments": true
  },
  "include": [
    "src/",
    "src/**/*.json"
  ],
  "exclude": [
    "**/*.spec.ts"
  ]
}
