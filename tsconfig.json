{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2022"
    ],
    "rootDir": "src",
    "module": "CommonJS",
    "moduleResolution": "Node10",
    "strict": true,
    "declaration": true,
    "outDir": "dist",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/hap-nodejs/@types"
    ],
  },
  "include": [
    "src",
    "src/**/*.json"
  ]
}
