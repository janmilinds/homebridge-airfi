{
  "pluginAlias": "Homebridge Airfi",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "Homebridge Airfi"
      },
      "host": {
        "title": "Host",
        "type": "string",
        "required": true,
        "format": "hostname"
      },
      "port": {
        "title": "Port",
        "type": "number",
        "default": 502,
        "required": true
      },
      "model": {
        "title": "Model",
        "type": "string",
        "default": "Model 60",
        "oneOf": [
          { "title": "Model 60", "enum": ["Model 60"] },
          { "title": "Model 100", "enum": ["Model 100"] },
          { "title": "Model 130", "enum": ["Model 130"] },
          { "title": "Model 150", "enum": ["Model 150"] },
          { "title": "Model 250", "enum": ["Model 250"] },
          { "title": "Model 350", "enum": ["Model 350"] }
        ],
        "required": true
      },
      "serialNumber": {
        "title": "Serial number",
        "type": "string",
        "required": true
      },
      "language": {
        "title": "Language",
        "type": "string",
        "default": "en",
        "oneOf": [
          { "title": "English", "enum": ["en"] },
          { "title": "Finnish", "enum": ["fi"] },
          { "title": "Swedish", "enum": ["sv"] }
        ],
        "required": true,
        "description": "Choose the language to display the default accessory names."
      },
      "exposeBoostedCoolingSwitch": {
        "title": "Expose Boosted cooling switch",
        "type": "boolean",
        "default": false,
        "description": "When activated, the unit monitors temperatures and boosts air volumes as needed depending on conditions."
      },
      "exposeFireplaceFunctionSwitch": {
        "title": "Expose Fireplace funtion switch",
        "type": "boolean",
        "default": false,
        "description": "Creates an overpressure for 30 min."
      },
      "exposeSaunaFunctionSwitch": {
        "title": "Expose Sauna funtion switch",
        "type": "boolean",
        "default": false,
        "description": "Prevents ventilation power increase when humidity level increases for 30 min."
      }
    }
  },
  "layout": [
    {
        "type": "section",
        "items": ["name", "host", "port", "model", "serialNumber", "language"]
    },
    {
        "title": "Ventilation unit features",
        "type": "section",
        "expandable": true,
        "expanded": false,
        "items": [
          "exposeSaunaFunctionSwitch",
          "exposeFireplaceFunctionSwitch",
          "exposeBoostedCoolingSwitch"
        ]
    }
  ]
}